<title>登录</title>
  <%= stylesheet_link_tag 'login.css' %>
	<body id="login">
		<div id="login-wrapper" class="png_bg">
			<div id="login-top">
			</div>
			<div id="login-content">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<p>
						<label>用户</label>
            <%= f.text_field  :email, :class =>"text-input"%>
          </p>
					<br style="clear: both;" />
					<p>
						<label>密码</label>
            <div><%= f.password_field  :password, :class => "text-input" %></div>
					</p>
					<br style="clear: both;" />
        <% if devise_mapping.rememberable? -%>
          <p><label>记住我</label>
          <%= f.check_box :remember_me %></p>
					<input class="button" type="submit" value="Sign In" />
        <% end -%>
			</div>
    <% end %>
		</div>
		<div id="dummy"></div>
		<div id="dummy2"></div>
  </body>
