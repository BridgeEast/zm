<title>注册</title>
<%= stylesheet_link_tag 'login.css' %>
	<body id="login">
		<div id="login-wrapper" class="png_bg">
			<div id="login-top">
				<!--<img src="treemoLabs-logo.png" alt="Treemo Labs Dashboard" title="Powered By Treemo Labs" />			-->
			</div>
			
			<div id="login-content">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					<p>
						<label>用户</label>
            <%= f.text_field  :email, :class =>"text-input"%>
					</p>
					<br style="clear: both;" />
					<p>
						<label>密码</label>
            <%= f.password_field  :password, :class => "text-input" %>
					</p>
					<br style="clear: both;" />
					<p>
						<input class="button" type="submit" value="Sign Up" />
					</p>
			</div>
    <% end %>
		</div>
		<div id="dummy"></div>
		<div id="dummy2"></div>
  </body>
